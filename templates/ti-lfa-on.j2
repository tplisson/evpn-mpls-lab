groups {
    GR-CORE-ISIS {
        protocols {
            isis {
                replace: backup-spf-options {
                    use-post-convergence-lfa;
                    use-source-packet-routing;
                }
                interface <ae*> {
                    lsp-interval 5;
                    point-to-point;
                    replace: level 2 {
                        hello-authentication-key-chain KC-ISIS-AUTH;
                        post-convergence-lfa;
                    }
                }
            }
        }
    }
}
protocols {
    isis {
        apply-groups GR-CORE-ISIS;
    }
}
