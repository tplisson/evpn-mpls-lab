
[edit policy-options]
+   policy-statement PL-EVI10-DEFAULT-NH-VGA-V4 {
+       term DEFAULT-NH-VGA-V4 {
+           from {
+               prefix-list PL-DEFAULT-V4;
+           }
+           then {
+               next-hop 10.10.1.1;
+               accept;
+           }
+       }
+       term DROP {
+           then reject;
+       }
+   }
+   policy-statement PL-EVI10-DEFAULT-NH-VGA-V6 {
+       term DEFAULT-NH-VGA-V6 {
+           from {
+               prefix-list PL-DEFAULT-V6;
+           }
+           then {
+               next-hop 101::1;
+               accept;
+           }
+       }
+       term DROP {
+           then reject;
+       }
+   }
[edit routing-instances vrf10 protocols bgp group QFX1 neighbor 10.10.1.111]
-       export PL-10-NH-VGA-v4;
+       export PL-EVI10-DEFAULT-NH-VGA-V4;
[edit routing-instances vrf10 protocols bgp group QFX1 neighbor 101::111]
-       export PL-10-NH-VGA-v6;
+       export PL-EVI10-DEFAULT-NH-VGA-V6;
